{
    "_comment:": "see https://nightwatchjs.org/gettingstarted#base-settings for an explanation of the json file properties",
    "src_folders": [
        "tests"
    ],
    "webdriver": {
        "start_process": true,
        "server_path": "node_modules/chromedriver/lib/chromedriver/chromedriver.exe",
        "port": 9515
    },
    "test_settings": {
        "default": {
            "filter": "./tests/e2e/*",
            "desiredCapabilities": {
                "browserName": "chrome"
            }
        },
        "unittests": {
            "unit_tests_mode": true,
            "filter": "./tests/unit/*",
            "exclude": ""
        }
    },
    "globals": "./examples/globalsModule.js",
    "test_globals": {
        "key": "value"
    }
}